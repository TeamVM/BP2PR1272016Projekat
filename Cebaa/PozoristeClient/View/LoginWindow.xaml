<Window x:Class="PozoristeClient.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PozoristeClient.View"
        mc:Ignorable="d"
        Title="LoginWindow" Height="200" Width="400">
    <Grid>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top" Width="100" FontWeight="Bold"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="222,11,0,0" VerticalAlignment="Top" Width="100" FontWeight="Bold"/>
        <Button Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="132,106,0,0" Command="{Binding LoginCommand}"/>
        <TextBox  HorizontalAlignment="Left" Height="23" Margin="20,37,0,0" Text="{Binding UserName}" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="222,37,0,0"  Text="{Binding Password}" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
